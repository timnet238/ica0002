$TTL	604800
168.192.in-addr.arpa.	IN	SOA	{{ groups['dns_primary'][0] }}.{{ domain_name }}. ilja.{{ domain_name }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 ) 	; Negative Cache TTL
;


{% for vm in groups['dns_servers'] %}
168.192.in-addr.arpa.	IN	NS	{{ vm }}.{{ domain_name }}.
{% endfor %}

{% for vm in groups['all'] %}
{{ (hostvars[vm]['ansible_default_ipv4']['address']|split('.'))[3] }}.{{ (hostvars[vm]['ansible_default_ipv4']['address']|split('.'))[2] }}  IN  PTR  {{ vm }}.{{ domain_name }}.
{% endfor %}
